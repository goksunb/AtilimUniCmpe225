using namespace std;

class exam
{
protected:
    string name;
    string date;
    double totalScore;

public:
    exam(string name, string date)
    {
        this->name = name;
        this->date = date;
    }
    virtual void calculateTotalScore() = 0;
    virtual void print() = 0;
};

class TOEFL : public exam
{
private:
    int reading;
    int listening;
    int speaking;
    int writing;

public:
    TOEFL(string name, string date, int reading, int listening, int speaking, int writing) : exam(name, date)
    {
        this->reading = reading;
        this->listening = listening;
        this->speaking = speaking;
        this->writing = writing;
    }
    void calculateTotalScore()
    {
        totalScore = reading + listening + speaking + writing;
    }
    void print()
    {
        cout << "Name: " << name << " Xam: TOEFL Date of Xam: " << date << endl;
        cout << "Reading: " << reading << " Listening: " << listening << " Speaking: " << speaking << " Writing: " << writing << endl;
        cout << "Total score: " << totalScore << endl;
        cout << endl;
    }
};

